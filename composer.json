{
    "name": "baijunyao/php-cs-rules",
    "description": "Custom PHP CS Fixer",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "baijunyao",
            "email": "baijunyao@baijunyao.com"
        }
    ],
    "require": {
        "php": ">=7.2.0",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "autoload": {
        "psr-4": {
            "Baijunyao\\PhpCsFixer\\": "src"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "phpcs": "vendor/bin/php-cs-fixer fix"
    }
}
